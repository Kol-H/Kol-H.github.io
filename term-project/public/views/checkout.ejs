<%- include('./partials/head') %>
<script src="../../scripts/checkout.js" type="application/javascript"></script>
</head>

<body>
    <%- include('./partials/nav') %>
    <main>
        <h1>Checkout</h1>
        <div class="row">
            <form id="checkoutForm">

                <input type="text" style="display:none" name="total" value="<%= totalCost %>" />

                <label for="address">Address</label>
                <input type="text" name="address" required />
                
                <label for="city">City</label>
                <input type="text" name="city" required />

                <br>
                
                <label for="state">State</label>
                <input type="text" name="state" required />
                
                <label for="zip">ZIP</label>
                <input type="text" name="zip" inputmode="numeric" pattern="[0-9]{5}" required />

                <br>
                <br>

                <label for="payment">Payment #</label>
                <input type="text" name="payment" inputmode="numeric" pattern="[0-9\s]{12,16}" placeholder="xxxx xxxx xxxx xxxx" required />
                <br>
                <label for="csv">CSV</label>
                <input type="text" name="csv" inputmode="numeric" pattern="[0-9]{3}" required/>

                <br>
                <br>

                <label for="email">Email</label>
                <input type="text" name="email" inputmode="email" value="<%= user.emails[0].value %>" required/>

                <br>
                <br>

                <button id="checkout">Checkout</button>
            </form>
        </div>
    </main>
</body>